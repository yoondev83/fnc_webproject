<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.webprj.project_green.dao.RankDao" >


    <select id="getProducts" parameterType="String" resultType="com.webprj.project_green.dto.ProductDto" >
        <!--SELECT * FROM PRODUCT-->
        SELECT PRODUCTNUM as productNum, NAME, IMAGEURL as imageUrl, LOCATION_LA as locationLa, LOCATION_LO as locationLo, recommend FROM PRODUCT
        <!-- aLIAS 를 사용하여, DTO 와 이름을 꼭 맞출 수 있도록 하자. -->
    </select>
    <update id="updateRecommend">
    UPDATE PRODUCT
    SET RECOMMEND = RECOMMEND + #{num}
    WHERE PRODUCTNUM = #{productNum}
    </update>
   
</mapper>