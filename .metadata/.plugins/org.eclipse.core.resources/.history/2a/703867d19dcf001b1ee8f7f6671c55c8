<script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
<script th:inline="javascript">
	window.onload = function(){
		var boards = []
		axios
		.post("/board/b_freetalk")
		.then(function (response) {
			boards = response.data
			console.log(boards)
			var boardsHtml = "";
            var tableNum_row = 0;
			for (var i = 0; i < boards.length; i++){
				//boarsHtml += "<a href=/board/detail/" + boards[i].postNum + ">";
				boardsHtml += "<tr>";
				boardsHtml +=  "<td>" + boards[i].postNum + "</td>";
				boardsHtml +=  "<td>" + "<a href=/board/detail/" + boards[i].postNum + ">" + boards[i].title + "</a></td>";
				boardsHtml +=  "<td>" + boards[i].content + "</td>";
				boardsHtml +=  "<td>" + boards[i].uploadDate + "</td>";
				boardsHtml +=  "<td>" + boards[i].recommend + "</td>";
				boardsHtml +=  '<div th:if="' + [[${boards.imageUrl}]] + '>';
				boardsHtml += '<img th:src="/board/display?fileName=' + [[${boards.imageUrl}]] + '"alt=이미지>';
				boardsHtml +=  "</div>";
				boardsHtml +=  "<td>" + boards[i].category + "</td>";
				boardsHtml +=  "<td>" + boards[i].userId+ "</td>";
				boardsHtml +=  "</tr>";
					
			}
			// for (var i = 0; i < boards.length; i++){
			// 	boardsHtml += 
                    
			// 		"번호 : " + boards[i].postNum +
			// 		"제목 : " + boards[i].title + 
			// 		"내용 : " + boards[i].content +
			// 		"게시일 : " + boards[i].uploadDate + 
			// 		"좋아요 수 : " + boards[i].recommend +
			// 		"이미지 : " + boards[i].imageUrl +
			// 		"카테고리 : " + boards[i].category + 
			// 		"사용자 : " + boards[i].userId + "<br/>";
                    
			// }
			
            document.getElementById('tablebodylol').innerHTML = boardsHtml;
		})
		.catch(function () {
		  console.log("실패");
		  alert("실패")
		});
	
	}
</script>
