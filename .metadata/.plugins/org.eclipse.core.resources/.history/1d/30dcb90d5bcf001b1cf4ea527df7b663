<script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
<script>
	window.onload = function (){
		try{
			document.querySelector("#edit").onclick = function(){
			alert("수정을 클릭");
			}
			document.querySelector("#remove").onclick = function(){
			alert("삭제을 클릭");
			}
		}catch{
			console.log("버튼 없음");
		}
	}
</script>
