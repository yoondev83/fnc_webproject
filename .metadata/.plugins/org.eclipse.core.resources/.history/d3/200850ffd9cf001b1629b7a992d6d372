    <!-- <table>
        <form action="/login/login" method="post" >
            <label for="id"> 아이디 : <input type="text" name="id" id="id" style="margin-top: 180px; margin-left: 15px;"></label><br/>
            <br>
            <label for="pass"> 비밀번호 : <input type="text" name="password" id="pass"></label> <br/>
            <input type="submit" value="로그인" style="margin-left: 60px;">
            <input type="button" value="회원가입" onclick="goLoginForm()" >
        </form>
    </table> -->
    <script>
    	document.querySelector("#login-submit").onclick = function(){
    		axios
    		.post("/login/login")
    		.then(function(response){
    			var result = response.data;
    			if(result === "NOTEXIST"){
    				var isOK = confirm("아이디가 존재하지 않습니다. 회원가입 하시겠습니까?");
    				if(isOK){
    					document.loginForm.action="/join"; 
    		    		document.loginForm.method="get";
    		    		document.loginForm.submit();
    		    		return false;
    				}else{
    					return false;
    				}
    				
    			}else if(result === "SUCCESS"){
    				alert("로그인 성공!")
    				document.loginForm.action="/index"; 
		    		document.loginForm.method="get";
		    		document.loginForm.submit();
		    		return false;
    			}else if(result === "INCORRECT_PW"){
    				alert("비밀번호 오류") 
    				document.querySelector("#pass").value = "";
    				return false;
    			}
    		})
    		.catch(function(){
    			alert("실패");
    		})
    	}
    </script>
